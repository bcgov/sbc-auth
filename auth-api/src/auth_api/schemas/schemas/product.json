{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/product",
    "type": "object",
    "title": "Product schema",
    "description": "The schema of product.",
    "default": {},
    "examples": [
        {
            "description": "Personal Property Registry",
            "url": "https://dev.bcregistry.ca/business/ppr",
            "type": "INTERNAL"
        }
    ],
    "required": [
        "description",
        "url",
        "type"
    ],
    "properties": {
        "description": {
            "$id": "#/properties/description",
            "type": "string",
            "title": "Description",
            "default": "",
            "examples": [
                "View and maintain records of charges such as liens, security interests, and encumberances filed against personal property."
            ]
        },
        "code": {
            "$id": "#/properties/code",
            "type": "string",
            "title": "Code",
            "default": "",
            "examples": [
                "PPR"
            ]
        },
        "hidden": {
            "$id": "#/properties/hidden",
            "type": "boolean",
            "title": "Hidden",
            "default": false
        },
        "needReview": {
            "$id": "#/properties/needReview",
            "type": "boolean",
            "title": "Need Review",
            "default": false
        },
        "premiumOnly": {
            "$id": "#/properties/premiumOnly",
            "type": "boolean",
            "title": "Premium Only",
            "default": false
        },
        "url": {
            "$id": "#/properties/url",
            "type": "string",
            "title": "URL",
            "default": "",
            "examples": [
                "https://dev.bcregistry.ca/business/ppr"
            ]
        },
        "subscriptionStatus": {
            "$id": "#/properties/subscriptionStatus",
            "type": "string",
            "title": "subscriptionStatus",
            "default": "",
            "examples": [
                "ACTIVE"
            ]
        },
        "type": {
            "$id": "#/properties/type",
            "type": "string",
            "title": "Type",
            "default": "",
            "examples": [
                "INTERNAL"
            ]
        }
    },
    "additionalProperties": true
}