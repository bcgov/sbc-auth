{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/org",
    "type": "object",
    "title": "Org",
    "additionalProperties": false,
    "required": [
      "name"
    ],
    "properties": {
      "name": {
        "$id": "#/properties/name",
        "type": "string",
        "title": "Organization Name",
        "default": "",
        "examples": [
          "Foobar Inc."
        ],
        "pattern": "^[^\\s]+(\\s+[^\\s]+)*$"
      },
      "typeCode": {
        "$id": "#/properties/orgType",
        "type": "string",
        "title": "Organizational Type",
        "default": "BASIC",
        "examples": [
          "BASIC", "PREMIUM"
        ],
        "pattern": "^(.*)$"
      },
      "accessType": {
        "$id": "#/properties/accessType",
        "type": "string",
        "title": "Access Type",
        "examples": [
          "ANONYMOUS"
        ],
        "pattern": "^(.*)$"
      },
      "bcOnlineCredential": {
        "oneOf": [
          {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/bconline_credential"
          }
        ]
      },
      "mailingAddress": {
        "oneOf": [
          {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/contact"
          }
        ]
      }
    }
  }
  