{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/invitation",
  "type": "object",
  "title": "Invitation",
  "definitions": {
    "invitationMembership": {
      "type": "object",
      "properties": {
        "membershipType": {
          "type": "string"
        },
        "orgId": {
          "type": "number"
        }
      },
      "required": [
        "membershipType",
        "orgId"
      ]
    }
  },
  "properties": {
    "recipientEmail": {
      "type": "string",
      "title": "The recipient email id."
    },
    "type": {
      "type": "string",
      "title": "Type of Invitation.",
      "examples": [
        "STANDARD",
        "GOVM"
      ]
    },
    "sentDate": {
      "type": "string",
      "format": "datetime",
      "title": "The date invitation is sent."
    },
    "membership": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/invitationMembership"
      }
    }
  },
  "required": [
    "recipientEmail",
    "membership"
  ]
}
