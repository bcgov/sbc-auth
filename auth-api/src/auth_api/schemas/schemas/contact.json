{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/contact",
    "type": "object",
    "title": "Contact",
    "additionalProperties": false,
    "properties": {
      "street": {
        "$id": "#/properties/street",
        "type": "string",
        "title": "Street",
        "default": "",
        "examples": [
          "123 Roundabout Lane"
        ],
        "pattern": "^(.*)$",
        "maxLength": 250
      },
      "streetAdditional": {
        "$id": "#/properties/street_additional",
        "type": "string",
        "title": "Street Additional",
        "default": "",
        "examples": [
          "Unit 1"
        ],
        "pattern": "^(.*)$",
        "maxLength": 250
      },
      "city": {
        "$id": "#/properties/city",
        "type": "string",
        "title": "City",
        "default": "",
        "examples": [
          "Victoria"
        ],
        "pattern": "^(.*)$",
        "maxLength": 100
      },
      "region": {
        "$id": "#/properties/region",
        "type": "string",
        "title": "Region",
        "default": "",
        "examples": [
          "British Columbia"
        ],
        "pattern": "^(.*)$",
        "maxLength": 100
      },
      "country": {
        "$id": "#/properties/country",
        "type": "string",
        "title": "Country",
        "default": "",
        "examples": [
          "CA"
        ],
        "pattern": "^(.*)$",
        "maxLength": 20
      },
      "postalCode": {
        "$id": "#/properties/postal_code",
        "type": "string",
        "title": "Postal Code",
        "default": "",
        "examples": [
          "V1A 1A1"
        ],
        "pattern": "^(.*)$",
        "maxLength": 15
      },
      "deliveryInstructions": {
        "$id": "#/properties/delivery_instructions",
        "type": "string",
        "title": "Delivery Instructions",
        "default": "",
        "examples": [
          "Ring buzzer 123"
        ],
        "pattern": "^(.*)$",
        "maxLength": 4096
      },
      "phone": {
        "$id": "#/properties/phone",
        "type": "string",
        "title": "Phone",
        "default": "",
        "examples": [
          "111-222-3333"
        ],
        "pattern": "^(.*)$",
        "maxLength": 20
      },
      "phoneExtension": {
        "$id": "#/properties/phone_extension",
        "type": "string",
        "title": "Phone Extension",
        "default": "",
        "examples": [
          "123"
        ],
        "pattern": "^(.*)$",
        "maxLength": 10
      },
      "email": {
        "$id": "#/properties/email",
        "type": "string",
        "title": "Email",
        "default": "",
        "examples": [
          "abc123@mail.com"
        ],
        "pattern": "(^[a-zA-Z0-9!#$%&'*+-/=?^_`{|.]+@[a-zA-Z0-9-]+\\.[a-zA-Z0-9-.]+$)",
        "maxLength": 100
      }
    }
  }
