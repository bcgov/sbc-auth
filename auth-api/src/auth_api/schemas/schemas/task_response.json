{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/task_response",
    "type": "object",
    "title": "Task Response",
    "description": "The Task schema for response.",
    "default": {},
    "examples": [
        {
            "id": 123,
            "name": "test_task",
            "relationship_type": "org",
            "relationship_id": 12,
            "date_submitted": "2020-11-23T15:14:20.712096+00:00",
            "due_date": "2020-11-03T20:50:39.366030+00:00",
            "task_type": "Pending"
        }
    ],
    "required": [],
    "properties": {
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "name",
            "default": "",
            "examples": [
                "test-task"
            ]
        },
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "ID",
            "default": 0,
            "examples": [
                5389
            ]
        },
        "dateSubmitted": {
            "$id": "#/properties/dateSubmitted",
            "type": "string",
            "title": "Date Submitted",
            "description": "Date submitted for the staff task.",
            "default": "",
            "examples": [
                "2020-11-23T15:14:20.712096+00:00"
            ]
        },
        "dueDate": {
            "$id": "#/properties/dueDate",
            "type": "string",
            "title": "Due Date",
            "description": "Due Date for the staff task.",
            "default": "",
            "examples": [
                "2020-11-03T20:50:39.366030+00:00"
            ]
        },
        "relationshipType": {
            "$id": "#/properties/relationshipType",
            "type": "string",
            "title": "Relationship Type",
            "default": "",
            "examples": [
                "Org"
            ]
        },
        "relationshipId": {
            "$id": "#/properties/relationshipId",
            "type": "integer",
            "title": "Relationship Id",
            "default": 0,
            "examples": [
                1
            ]
        },
        "taskType": {
            "$id": "#/properties/taskType",
            "type": "string",
            "title": "Task Type",
            "default": "",
            "examples": [
                "Pending"
            ]
        }
    },
    "additionalProperties": true
}