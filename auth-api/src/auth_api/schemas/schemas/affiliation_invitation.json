{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/affiliation_invitation",
  "type": "object",
  "title": "Affiliation Invitation",
  "definitions": {},
  "properties": {
    "fromOrgId": {
      "type": "number"
    },
    "toOrgId": {
      "type": ["number", "null"]
    },
    "businessIdentifier": {
      "$id": "#/properties/businessIdentifier",
      "type": "string",
      "title": "Business Identifier",
      "default": "",
      "examples": [
        "CP1234567"
      ],
      "pattern": "^(.*)$"
    },
    "type": {
      "type": "string",
      "title": "Type of Affiliation Invitation.",
      "examples": [
        "EMAIL",
        "PASSCODE",
        "REQUEST"
      ]
    },
    "passCode": {
      "type": "string",
      "title": "Passcode",
      "examples": [
        "12345"
      ],
      "pattern": "^(.*)$"
    },
    "additionalMessage": {
      "type": "string",
      "title": "Additional Message"
    }
  },
  "required": [
    "fromOrgId",
    "businessIdentifier"
  ]
}
