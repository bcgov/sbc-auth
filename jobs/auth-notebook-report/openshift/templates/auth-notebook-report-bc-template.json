{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "auth-notebook-report-bc-template",
        "creationTimestamp": null
    },
    "objects": [
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "auth-notebook-report",
                "creationTimestamp": null,
                "labels": {
                    "app": "auth-notebook-report"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "type": "Git",
                    "git": {                        
						"uri": "${GIT_REPO_URL}",
                        "ref": "master"
                    },
                    "contextDir": "jobs/auth-notebook-report"
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "dockerfilePath": "Dockerfile"
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "auth-notebook-report:latest"
                    }
                },
                "resources": {},
                "postCommit": {},
                "nodeSelector": null
            },
            "status": {
                "lastVersion": 0
            }
        }
    ],
	"parameters": [    
    {
      "name": "GIT_REPO_URL",
      "displayName": "Git Repo URL",
      "description": "The URL to your GIT repo.",
      "required": true,
      "value": "https://github.com/bcgov/sbc-auth"
    }
  ]
}
