{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "annotations": {
      "description": "Configmap template for the api service. This template may not include real value of secrets; you need to manually replace the value in Openshift.",
      "tags": "${NAME}-${TAG_NAME}"
    },
    "name": "${NAME}-config"
  },
  "objects": [
    {
      "kind": "ConfigMap",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-${TAG_NAME}-config",
        "labels": {
          "app": "${NAME}-${TAG_NAME}",
          "app-group": "${APP_GROUP}",
          "template": "${NAME}-config"
        }
      },
      "data": {
        "POD_TESTING": "true",
        "SENTRY_DSN": "https://<account>@sentry.io/<project>",
        "JWT_OIDC_ALGORITHMS": "${JWT_OIDC_ALGORITHMS}",
        "JWT_OIDC_AUDIENCE": "${JWT_OIDC_AUDIENCE}",
        "JWT_OIDC_CLIENT_SECRET": "${JWT_OIDC_CLIENT_SECRET}",
        "JWT_OIDC_ISSUER": "${JWT_OIDC_ISSUER}",
        "JWT_OIDC_JWKS_CACHE_TIMEOUT": "${JWT_OIDC_JWKS_CACHE_TIMEOUT}",
        "JWT_OIDC_WELL_KNOWN_CONFIG": "${JWT_OIDC_WELL_KNOWN_CONFIG}",
        "KEYCLOAK_ADMIN_CLIENTID": "${KEYCLOAK_ADMIN_CLIENTID}",
        "KEYCLOAK_ADMIN_SECRET": "${KEYCLOAK_ADMIN_SECRET}",
        "KEYCLOAK_AUTH_AUDIENCE": "${KEYCLOAK_AUTH_AUDIENCE}",
        "KEYCLOAK_AUTH_CLIENT_SECRET": "${KEYCLOAK_AUTH_CLIENT_SECRET}",
        "KEYCLOAK_BASE_URL": "${KEYCLOAK_BASE_URL}",
        "KEYCLOAK_REALMNAME": "${KEYCLOAK_REALMNAME}",
        "MAIL_SERVER": "${MAIL_SERVER}",
        "MAIL_PORT": "${MAIL_PORT}",
        "MAIL_USE_TLS": "${MAIL_USE_TLS}",
        "MAIL_USE_SSL": "${MAIL_USE_SSL}",
        "MAIL_USERNAME": "${MAIL_USERNAME}",
        "MAIL_PASSWORD": "${MAIL_PASSWORD}",
        "MAIL_FROM_ID": "${MAIL_FROM_ID}",
        "AUTH_WEB_TOKEN_CONFIRM_URL": "${AUTH_WEB_TOKEN_CONFIRM_URL}",
        "EMAIL_SECURITY_PASSWORD_SALT": "${EMAIL_SECURITY_PASSWORD_SALT}",
        "EMAIL_TOKEN_SECRET_KEY": "${EMAIL_TOKEN_SECRET_KEY}",
        "TOKEN_EXPIRY_PERIOD": "${TOKEN_EXPIRY_PERIOD}",
        "LEGAL_API_URL": "",
        "SERVICE_SCHEDULE": "",
        "NOTIFY_API_URL": "",
        "NATS_CLIENT_NAME": "",
        "NATS_CLUSTER_ID": "",
        "NATS_QUEUE": "",
        "NATS_SERVERS": "",
        "NATS_SUBJECT": "",
        "DELIVERY_FAILURE_RETRY_TIME_FRAME": "",
        "FAILURE_EMAIL_TIME_FRAME": "",
        "PENDING_EMAIL_TIME_FRAME": "",
        "FLASK_ENV": ""
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the OpenShift resources associated to the server instance.",
      "required": true,
      "value": "api"
    },
    {
      "name": "APP_GROUP",
      "displayName": "App Group",
      "description": "The name assigned to all of the deployments in this project.",
      "required": true,
      "value": "sbc-auth"
    },
    {
      "name": "TAG_NAME",
      "displayName": "Environment TAG name",
      "description": "The TAG name for this environment, e.g., dev, test, prod",
      "required": true,
      "value": "dev"
    },
    {
      "name": "KEYCLOAK_NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the OpenShift resources associated to the server instance.",
      "required": true,
      "value": "keycloak"
    },
    {
      "name": "JWT_OIDC_ALGORITHMS",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "JWT_OIDC_AUDIENCE",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "JWT_OIDC_CLIENT_SECRET",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "JWT_OIDC_ISSUER",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "JWT_OIDC_JWKS_CACHE_TIMEOUT",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "JWT_OIDC_WELL_KNOWN_CONFIG",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "KEYCLOAK_ADMIN_CLIENTID",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "KEYCLOAK_ADMIN_SECRET",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "KEYCLOAK_AUTH_AUDIENCE",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "KEYCLOAK_AUTH_CLIENT_SECRET",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "KEYCLOAK_BASE_URL",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "KEYCLOAK_REALMNAME",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "MAIL_SERVER",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "MAIL_PORT",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "MAIL_USE_TLS",
      "displayName": "Name",
      "required": true,
      "value": "False"
    },
    {
      "name": "MAIL_USE_SSL",
      "displayName": "Name",
      "required": true,
      "value": "True"
    },
    {
      "name": "MAIL_USERNAME",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "MAIL_PASSWORD",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "MAIL_FROM_ID",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "AUTH_WEB_TOKEN_CONFIRM_URL",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "EMAIL_SECURITY_PASSWORD_SALT",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "EMAIL_TOKEN_SECRET_KEY",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "TOKEN_EXPIRY_PERIOD",
      "required": true,
      "generate": "expression",
      "from": "[a-zA-Z0-9]{16}"
    },
    {
      "name": "SENTRY_DSN",
      "displayName": "Sentry Init URL",
      "description": "Sentry DSN URL to initialize the Sentry SDK",
      "required": true,
      "value": "https://account.sentry.ioo/project/id"
    }
  ]
}