{
	"info": {
		"_postman_id": "72e94140-de3b-49a2-8fa1-6faa3816c8ad",
		"name": "notify-api",
		"description": "Endpoint samples to create an user using KeyCloak REST Admin API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Login user through API",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "e9817628-49c4-448c-9fdc-c8c61f9b72de",
						"exec": [
							"var jsonData = pm.response.json();",
							"pm.environment.set(\"userToken\", jsonData.access_token);",
							"pm.environment.set(\"userRefreshToken\", jsonData.refresh_token);",
							"pm.environment.set(\"userTraceId\", jsonData['registries-trace-id']);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"username\": \"CP0001555\",\n\t\"password\": \"861614998\"\n}"
				},
				"url": {
					"raw": "{{api_url}}/api/v1/token",
					"host": [
						"{{api_url}}"
					],
					"path": [
						"api",
						"v1",
						"token"
					]
				}
			},
			"response": []
		},
		{
			"name": "Notify Post",
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{userToken}}"
					},
					{
						"key": "registries-trace-id",
						"value": "{{userTraceId}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"notifyType\": \"EMAIL\",\r\n  \"requestDate\": \"2019-09-25T09:08:57.515479+00:00\",\r\n  \"subject\": \"test email\",\r\n  \"recipients\": \"patrick.wei@gov.bc.ca\",\r\n  \"contentBody\": \"This is a test email from notify service.\"\r\n}",
					"options": {
						"raw": {
							"language": "text"
						}
					}
				},
				"url": {
					"raw": "{{notify_api_url}}/api/v1/notify",
					"host": [
						"{{notify_api_url}}"
					],
					"path": [
						"api",
						"v1",
						"notify"
					]
				}
			},
			"response": []
		},
		{
			"name": "Notify Get",
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{userToken}}"
					},
					{
						"key": "registries-trace-id",
						"value": "{{userTraceId}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"requestDate\": false,\r\n  \"subject\": \"test email\",\r\n  \"recipients\": \"patrick.wei@gov.bc.ca\",\r\n  \"contentBody\": \"This is a test email from notify service.\"\r\n}"
				},
				"url": {
					"raw": "{{notify_api_url}}/api/v1/notify",
					"host": [
						"{{notify_api_url}}"
					],
					"path": [
						"api",
						"v1",
						"notify"
					]
				}
			},
			"response": []
		},
		{
			"name": "Logout user",
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{userToken}}"
					}
				],
				"url": {
					"raw": "https://{{base_url}}/auth/realms/{{realm_name}}/protocol/openid-connect/logout",
					"protocol": "https",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"auth",
						"realms",
						"{{realm_name}}",
						"protocol",
						"openid-connect",
						"logout"
					]
				}
			},
			"response": []
		}
	],
